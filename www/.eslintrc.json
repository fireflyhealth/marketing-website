{
  "extends": [
    "plugin:storybook/recommended",
    "plugin:security/recommended-legacy",
    "next/core-web-vitals",
    "../.eslintrc.shared.json"
  ],
  "rules": {
    "import/no-default-export": "error"
  },
  "overrides": [
    {
      "files": [
        "src/pages/**/*",
        "src/**/*.stories.*",
        "tailwind.config.ts",
        "testing/mocks/**/*"
      ],
      "rules": {
        "import/no-default-export": "off"
      }
    }
  ]
}
